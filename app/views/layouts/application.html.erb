<!DOCTYPE html>
<html>
  <head>
    <title>SummerCampApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <div class="row">
        <div class="col logo p-3">
          <a href="/camps"><img src="/logo.png"></a>
        </div>
        <div class="col p-3">
        </div>
      </div>
    </div>

    <div class="container">
      <div class="row bg-1 px-3">
        <div class="col p-2 mt-2"></div>
        <div class="col p-2 mt-2"></div>
        <div class="col text-right p-2 mt-2">

          <% if logged_in? %>
          <p> <%= link_to current_user.username, current_user %> | <%= link_to "Log out", logout_path, method: "post" %> </p>

        <% else %>
          <p> <%= link_to "Log in", login_path %> / <%= link_to "Register", signup_path %> </p>
        <% end %>
        </div>
      </div>
    </div>

    <% if request.original_url == 'http://localhost:3000/camps' %>
    <div class="container p-0">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
          <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
          </ol>
          <div class="carousel-inner">
            <div class="carousel-item active">
              <img class="d-block w-100" src="/images/slider1.jpg" alt="First slide">
            </div>
            <div class="carousel-item">
              <img class="d-block w-100" src="/images/slider2.jpg" alt="Second slide">
            </div>
            <div class="carousel-item">
              <img class="d-block w-100" src="/images/slider3.jpg" alt="Third slide">
            </div>
          </div>
          <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
    </div>
    <% end %>

    <div class="container bg-2">
      <div class="row px-3">
        <div class="col p-3 ">
          <%= yield %>
        </div>
      </div>
    </div>

    <div class="container footer">
      <div class="row bg-1 text-center">
        <div class="col p-3 border-right"><b><a href="/teachers">Teacher Portal</a></b></div>
        <div class="col p-3 border-right"><b><a href="/camps">Camp Portal</a></b></div>
        <div class="col p-3"><b><a href="/students">Student Portal</a></b></div>
      </div>
    </div>
  </body>
</html>
