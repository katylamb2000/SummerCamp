<!DOCTYPE html>
<html>
  <head>
    <title>SummerCampApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="wrapper clearfix">
      <div class="col-1">
        <img src="/logo.png">
      </div>
    </div>

    <div class="wrapper clearfix nav-bar">
        <div class="col-2 hidden">.</div>
        <div class="col-1">
          <% if logged_in? %>
          <p> <%= link_to current_user.username, current_user %> | <%= link_to "Log out", logout_path, method: "post" %> </p>

        <% else %>
          <p> <%= link_to "Log in", login_path %> /
          <%= link_to "Register", signup_path %> </p>
        <% end %>
</div>
    </div>

    <div class="wrapper clearfix">
      <div class="col-3">
        <%= yield %>
      </div>
    </div>

    <div class="wrapper clearfix footer">

        <div class="col-1"></div>
        <div class="col-1"></div>
        <div class="col-1"></div>

    </div>
  </body>
</html>
