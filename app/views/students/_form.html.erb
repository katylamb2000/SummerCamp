<%= form_for(@student) do |f| %>
  <div class="field">
    <%= f.label :username, "Username:" %><br>
    <%= f.text_field :username %>
  </div>
  <div class="field">
    <%= f.label :password, "Password:" %><br>
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :name, "Name:" %><br>
    <%= f.text_field :name %>
  </div><br>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
